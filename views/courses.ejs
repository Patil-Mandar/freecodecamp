<% layout('/layouts/boilerplate')  %> 

<div class="w-50 mt-3 mx-auto text-center">
    <h2>Welcome to freeCodeCamp.org</h2>

    <h5 class="mt-5 fw-normal">"I have not failed. I've just found 10,000 ways that won't work."</h5>

    <h6 class="fw-normal fst-italic">- Thomas A. Edison</h6>

    <div class="mx-5 my-4">
        <% for(let course of courses){ %>
            <a href="#" class=" text-decoration-none "><div class="py-2 my-1 text-dark bg-secondary border border-2 border-dark"><b><%= course.title %></b>  (<%= course.duration %> hours)</div></a>
        <% } %>
    </div>
</div>

