<% layout('/layouts/boilerplate')  %> 

<div class="container mt-3">
    <div class="row">
        <div class="col-md-6 offset-md-3  col-xl-4 offset-xl-4">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title">Sign In</h4>
                    <form class="form" action="/signIn" method="post">
                        <div class="mb-3">
                            <label class="form-label" for="username">Email ID</label>
                            <input class="form-control" type="text" id="username" name="username" required autofocus>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                        </div>
                        <button class="btn btn-success w-100">Sign In</button>
                        <a class="btn btn-danger w-100 mt-2" href="/google"><b>Google</b> Sign In</a>

                    </form>
                </div>
            </div>
            <div class="text-center mt-2">
                <p class="d-inline">New here?</p>
                <a class="d-inline" href="/signUp">Sign Up</a>
            </div>
        </div>
    </div>
